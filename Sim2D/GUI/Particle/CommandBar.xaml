<UserControl x:Class="Sim2D.GUI.Particle.CommandBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sim2D.GUI.Particle"
             xmlns:Commands="clr-namespace:Sim2D.GUI.Particle.Commands"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="26">
    <Border Padding="2">
        <StackPanel>
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Height" Value="22"/>
                    <Setter Property="Margin" Value="0, 0, 0, 5"/>
                    <Setter Property="FontFamily" Value="Segoe MDL2 Assets"/>
                </Style>
            </StackPanel.Resources>

            <Label FontFamily="Segoe MDL2 Assets" Content="&#xE8A1;"/>
            <Separator Margin="0, 0, 0, 5"/>

            <Button x:Name="DeleteAllButton" Content="&#xE74D;" ToolTip="!CAUTION! - Clear everything"/>
            <Button x:Name="PauseButton" Content="&#xE769;" ToolTip="Pause the simulation"/>
            <Button x:Name="PlayButton" Content="&#xE768;" ToolTip="Start the simulation"/>
        </StackPanel>
    </Border>
</UserControl>
