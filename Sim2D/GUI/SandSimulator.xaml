<UserControl x:Class="Sim2D.GUI.SandSimulator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Sim2D.GUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="500">
    <DockPanel Background="White">
        <StackPanel Width="30" DockPanel.Dock="Left" Background="LightGray" Margin="0, 0, 5, 0">
            
        </StackPanel>
        <Canvas x:Name="simCanvas"
                
                MouseLeftButtonDown="simCanvas_MouseLeftButtonDown"
                MouseLeftButtonUp="simCanvas_MouseLeftButtonUp"
                
                SizeChanged="simCanvas_SizeChanged"
                
                Loaded="simCanvas_Loaded"
                Background="LightGray"/>
    </DockPanel>
</UserControl>
